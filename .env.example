# Server Configuration
NODE_ENV=development
PORT=5000

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@host:port/database"
SHADOW_DATABASE_URL="postgresql://user:password@host:port/shadow_database"

# S3/MinIO Storage
S3_ENDPOINT=https://s3.glowel.com.mx
S3_REGION=us-east-1
S3_BUCKET=ensenas-ai-dev-test
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_FORCE_PATH_STYLE=true

# Firebase Authentication
FIREBASE_PROJECT_ID=ensenasai

# METHOD 1: Local Development (File Path)
# Use this when running locally with the JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=./ensenasai-firebase-adminsdk-fbsvc-05c4fb14f1.json

# METHOD 2: Production / Dokploy (Environment Variable)
# Paste the full content of the JSON file here. This takes priority if set.
# FIREBASE_SERVICE_ACCOUNT_JSON={"type": "service_account", ...}

# Security & Rate Limiting
# Use comma-separated values for multiple origins in production
# Example: http://localhost:3000,https://ensenas.ai
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_API_MAX=1000
RATE_LIMIT_AUTH_MAX=20

# Presigned URL Expiry (seconds)
PRESIGNED_URL_EXPIRY=300
